<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
app:cardCornerRadius="42dp"
app:cardElevation="8dp"
xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E5E5">


        <ImageView
            android:id="@+id/gym_icon"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_member_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/first_name"
            style="@style/members_font"
            android:layout_width="97dp"
            android:layout_height="31dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:text="Harry"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/last_name"
            style="@style/members_font"
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_margin="16dp"
            android:layout_marginTop="1dp"
            android:text="Potter"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/first_name"
            app:layout_constraintVertical_bias="0.542" />

        <TextView
            android:id="@+id/Member_type"
            style="@style/members_font"
            android:layout_width="96dp"
            android:layout_height="23dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:text="Gold"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phone_number"
            style="@style/phone_font"
            android:layout_width="98dp"
            android:layout_height="27dp"
            android:layout_margin="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="36dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/Member_type"
            app:layout_constraintVertical_bias="0.2"
            tools:text="6148972550" />

        <View
            android:id="@+id/view"
            android:layout_width="11dp"
            android:layout_height="72dp"
            android:background="#FB333D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.384" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>